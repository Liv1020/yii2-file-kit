{
    "name": "liv/yii2-file-kit",
    "description": "Yii2 file upload and storage kit plus, add JCrop and resize",
    "type": "yii2-extension",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Eugene Terentev",
            "email": "eugene@terentev.net"
        },
        {
          "name": "Liv",
          "email": "523260513@qq.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "yiisoft/yii2": "~2.0.0",
        "yiisoft/yii2-jui": "~2.0.0",
        "league/url": "~3.0",
        "league/flysystem": "~1.0",
        "bower-asset/blueimp-file-upload": "~9.7.0",
        "bower-asset/blueimp-canvas-to-blob": "^2.1",
        "bower-asset/blueimp-load-image": "^1.13",
        "bower-asset/blueimp-tmpl": "^2.5",
        "bower-asset/Jcrop": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.5.0",
        "creocoder/yii2-flysystem": "~0.8"
    },
    "autoload": {
        "psr-4": { "trntv\\filekit\\": "src/" }
    },
    "extra":{
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
